<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="8dp"
    app:cardCornerRadius="2dp"
    app:cardUseCompatPadding="true">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/lay6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/lays"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <TextView
            android:id="@+id/list_item_name"
            android:paddingRight="3dp"
            android:paddingLeft="3dp"
            android:layout_margin="3dp"
            android:paddingTop="10dp"
            android:textColor="@color/b2"
            android:textSize="16sp"
            android:layout_marginBottom="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_alignParentLeft="true"
            android:layout_toRightOf="@+id/arrow"
            android:singleLine="true"
            android:text="Dr. Anita Balakrishna"/>
       <!-- <ImageView
            android:id="@+id/arrow"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:paddingTop="15dp"
            android:src="@drawable/arrow_yellow_64"
            android:layout_alignParentRight="true"
            />-->


        <TextView
            android:id="@+id/qualification"
            android:text="MBBS, MS"
            android:textColor="@color/g2"
            android:layout_marginLeft="5dp"
            android:layout_below="@+id/list_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/specialization"
            android:text="Obstetrics and Gynecologist OBG"
            android:textColor="@color/g2"
            android:layout_marginLeft="5dp"
            android:layout_below="@+id/qualification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RatingBar
            android:layout_margin="5dp"
            android:id="@+id/ratingBar"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:isIndicator="true"
            android:numStars="5"
            android:max="5"
            android:stepSize="1"
            android:progressBackgroundTint="@color/g3"
            android:progressTint="@color/colorAccent"
            android:rating="0"
            android:theme="@style/RatingBar"
            android:layout_below="@+id/specialization"/>
        <View
            android:id="@+id/v1"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/dotted"
            android:layerType="software"
            android:layout_below="@+id/ratingBar"/>



        <!--<ImageView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="match_parent"-->
        <!--android:layout_toRightOf="@id/imageView2"-->
        <!--android:src="@drawable/divider"-->
        <!--android:layout_centerVertical="true"/>-->
        <ImageView
            android:id="@+id/image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:src="@drawable/doctor_roundimage"
            android:background="@drawable/circle"
            android:layout_centerHorizontal="true"
            android:visibility="visible"
            android:layout_below="@+id/v1"
            />
        <!-- <de.hdodenhof.circleimageview.CircleImageView
             android:id="@+id/image"
             android:layout_width="120dp"
             android:layout_height="120dp"
             android:layout_below="@+id/v1"
             android:layout_centerHorizontal="true"
             android:layout_marginTop="10dp"
             android:background="@drawable/zywee_logo"
             android:onClick="onClickProfilePicture"
             app:border_color="@color/white"
             app:border_width="3dp" />-->
        <TextView
            android:id="@+id/quali"
            android:text="Qualification"
            android:textColor="@color/g2"
            android:paddingLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/qualify"
            android:text="MBBS, MS"
            android:textColor="@color/g1"
            android:paddingLeft="10dp"
            android:layout_below="@+id/quali"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/exp"
            android:text="Experience"
            android:textColor="@color/g2"
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            android:layout_below="@+id/qualify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/experience"
            android:text="13 years"
            android:textColor="@color/g1"
            android:paddingLeft="10dp"
            android:layout_below="@+id/exp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/text"
            android:text="Dr. Anita Balakrishna is available in the following center"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            android:background="@color/g2"
            android:layout_centerVertical="true"
            android:gravity="left"
            android:paddingTop="10dp"
            android:layout_below="@+id/experience"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="15sp"
            />

            <TextView
                android:id="@+id/test_institute_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="15dp"
                android:layout_below="@+id/text"
                android:text="Institute Name"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/b2"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/list_locality_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:layout_below="@+id/test_institute_name"
                android:singleLine="true"
                android:text="Locality"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/g2"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:layout_below="@+id/list_locality_name"
                android:singleLine="true"
                android:text="9:00 AM -6:00 PM"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/g2"
                android:textSize="12dp" />



        <View
            android:id="@+id/v2"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/dotted"
            android:layerType="software"
            android:layout_below="@+id/ratingBar"/>



            <TextView
                android:id="@+id/test_cost_full"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center_horizontal"
                android:layout_below="@+id/v2"
                android:layout_toLeftOf="@+id/test_cost"
                android:text=""
                android:textColor="@color/g2"
                android:textSize="20dp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/test_cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Test price"
                android:layout_below="@+id/v2"
                android:textColor="@color/b3"
                android:textIsSelectable="false"
                android:paddingLeft="10dp"
                android:textSize="20dp"
                android:paddingRight="20dp"/>


            <TextView
                android:id="@+id/list_item_discount"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="5dp"
                android:background="@drawable/circle_background"
                android:gravity="center_horizontal"
                android:padding="20dp"
                android:text="0% off"
                android:layout_below="@+id/v2"
                android:layout_toRightOf="@+id/test_cost"
                android:textColor="@color/g2"
                android:textSize="12dp"
                android:visibility="gone"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="5dp"
            android:orientation="horizontal"
            android:paddingBottom="5dp"
            android:weightSum="1"
            android:layout_below="@+id/lays">

            <Button
                android:id="@+id/more_details"
                android:layout_width="0dp"
                android:background="@color/g1"
                android:textColor="@android:color/white"
                android:layout_height="wrap_content"
                android:text="Call Us"
                android:textSize="16sp"
                android:textAllCaps="false"
                android:layout_marginRight="3px"
                android:layout_weight="0.5" />

            <Button
                android:id="@+id/test_book_button"
                android:layout_marginLeft="3px"
                android:textAllCaps="false"
                android:layout_width="0dp"
                android:background="@color/y2"
                android:text="Book"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                />
        </LinearLayout>


    </RelativeLayout>
    </ScrollView>


</android.support.v7.widget.CardView>