<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/test_cart_child"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bordertop">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/g4"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:id="@+id/cart_test_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:gravity="left"
            android:text="Test name"
            android:textColor="@color/g1"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/cart_test_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_weight="0.7"
            android:gravity="left"
            android:text="Test price"
            android:textColor="@color/g1"
            android:textSize="15dp" />


        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:id="@+id/remove"
            android:layout_margin="15dp"
            android:src="@drawable/remove" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/g1" />
</LinearLayout>
