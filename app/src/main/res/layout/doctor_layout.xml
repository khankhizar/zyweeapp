            android:id="@+id/image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_below="@+id/v1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/zywee_logo"
            android:onClick="onClickProfilePicture"
            app:border_color="@color/white"
            app:border_width="3dp" />-->
        <TextView
            android:id="@+id/quali"
            android:text="Qualification"
            android:textColor="@color/g2"
            android:paddingLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/qualify"
            android:text="MBBS, MS"
            android:textColor="@color/g1"
            android:paddingLeft="10dp"
            android:layout_below="@+id/quali"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/exp"
            android:text="Experience"
            android:textColor="@color/g2"
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            android:layout_below="@+id/qualify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/experience"
            android:text="13 years"
            android:textColor="@color/g1"
            android:paddingLeft="10dp"
            android:layout_below="@+id/exp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/text"
            android:text="Dr. Anita Balakrishna is available in the following center"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            android:background="@color/g2"
            android:layout_centerVertical="true"
            android:gravity="left"
            android:paddingTop="10dp"
            android:layout_below="@+id/experience"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="15sp"
            />
        <include
            android:id="@+id/p1_n"
            layout="@layout/doctor_view_without_padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/text" />


    </RelativeLayout>


    </android.support.v7.widget.CardView>