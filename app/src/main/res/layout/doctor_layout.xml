<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="8dp"
    app:cardCornerRadius="2dp"
    app:cardUseCompatPadding="true">
    <RelativeLayout
        android:id="@+id/lay6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/list_item_name"
        android:paddingRight="3dp"
        android:paddingLeft="3dp"
        android:layout_margin="3dp"
        android:paddingTop="10dp"
        android:textColor="@color/b2"
        android:textSize="16sp"
        android:layout_marginBottom="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_alignParentLeft="true"
        android:layout_toRightOf="@+id/arrow"
        android:singleLine="true"
        android:text="Dr. Anita Balakrishna"/>
    <ImageView
        android:id="@+id/arrow"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:paddingTop="15dp"
        android:src="@drawable/arrow_yellow_64"
        android:layout_alignParentRight="true"
        />


    <TextView
        android:id="@+id/qualification"
        android:text="MBBS, MS"
        android:textColor="@color/g2"
        android:layout_marginLeft="5dp"
        android:layout_below="@+id/list_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/specialization"
            android:text="Obstetrics and Gynecologist OBG"
            android:textColor="@color/g2"
            android:layout_marginLeft="5dp"
            android:layout_below="@+id/qualification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RatingBar
            android:layout_margin="5dp"
            android:id="@+id/ratingBar"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:isIndicator="true"
            android:numStars="5"
            android:max="5"
            android:stepSize="1"
            android:progressBackgroundTint="@color/g3"
            android:progressTint="@color/colorAccent"
            android:rating="0"
            android:theme="@style/RatingBar"
            android:layout_below="@+id/specialization"/>
    <View
        android:id="@+id/v1"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/dotted"
        android:layerType="software"
        android:layout_below="@+id/ratingBar"/>



            <!--<ImageView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="match_parent"-->
            <!--android:layout_toRightOf="@id/imageView2"-->
            <!--android:src="@drawable/divider"-->
            <!--android:layout_centerVertical="true"/>-->
            <ImageView
                android:id="@+id/image"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/doctor_roundimage"
                android:background="@drawable/circle"
                android:layout_centerHorizontal="true"
                android:visibility="visible"
                android:layout_below="@+id/v1"
                />
                <!--android:scaleType="fitXY"-->
